{
    "name": "zstyle/e-commerce",
    "description": "Zstyle E-commerce Platform - Automation Testing",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": ">=8.0",
        "guzzlehttp/guzzle": "^7.8"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "php-webdriver/webdriver": "^1.15"
    },
    "autoload": {
        "psr-4": {
            "Zstyle\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "test:unit": "phpunit --testsuite Unit",
        "test:api": "phpunit --testsuite API",
        "test:ui": "phpunit --testsuite UI",
        "test:coverage": "phpunit --coverage-html coverage"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
